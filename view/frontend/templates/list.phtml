<?php $collection = $block->getCrudimageCollection(); ?>
<?php if($collection->count() > 0): ?>
    <?php if ($block->getPagerHtml()): ?>
        <div class="order-products-toolbar toolbar bottom"><?php echo $block->getPagerHtml(); ?></div>
    <?php endif ?>
    <table class="data table" id="crudimage-data-table">
        <caption class="table-caption">KiwiCommerce Testimonial Data</caption>
        <thead>
            <tr>
                <th scope="col" class="col Company">Company</th>
                <th scope="col" class="col name">Name</th>
                <th scope="col" class="col message">Message</th>
                <th scope="col" class="col post">Post</th>
                <th scope="col" class="col profile_pic">Profile Pic</th>
                <th scope="col" class="col created_at">Created At</th>
                <th scope="col" class="col actions">Action</th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($collection as $key => $data): ?>
                <tr>
                    <td data-th="Company" class="col company"><?php echo $data->getCompanyName(); ?></td>
