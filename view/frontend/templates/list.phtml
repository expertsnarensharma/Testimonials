                    <td data-th="Profile" class="col profile_pic">
                        <?php $image = $data->getProfilePic(); ?>
                        <?php if (!empty($image)): ?>
                            <img width="70" height="70" src="<?php echo htmlspecialchars($block->getBaseUrl() . 'media/' . ltrim((string)$image, '/'), ENT_QUOTES, 'UTF-8'); ?>" alt="Image">
